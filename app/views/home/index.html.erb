<main>
  <section class="main-section">
    <article>
      <%= image_tag("icons/petshop-logo.svg", class: "petshop-logo") %>

      <div class="content-container flex-center-between">
        <div>
          <h2 class="main-title-bold">
            TRAGA SEU
            <%= svg_tag "icons/Pet.svg", class: "pet-icon" %>
          </h2>

          <h3 class="sub-title">dê a ele o tratamento que ele merece.</h3>

          <h3 class="sub-title" style="margin-top: 60px;">
            O seu aumiguinho terá tratamento
            <strong class="vip-text">VIP</strong>
          </h3>
        </div>

        <div style="margin-top: auto;">
          <%= image_tag("pictures/dog-cat.jpg", class: "dog-picture") %>
        </div>
      </div>
    </article>
  </section>

  <section style="background-color: #f7f7f7;">
    <div style="max-width: 1300px; margin: 0 auto; padding: 6.25rem 0;">

      <h3 style="text-align: center;font-family: var(--family-baloo);">Confira nossa opções de Categorias</h3>


      <div style="display: flex; align-items: center; justify-content: space-evenly;">
        <div style="border-radius: 50%; padding: 15px; background-color: green;width:fit-content;">
          <%= svg_tag "pictures/categories/dog.svg", style: "color: red; font-size: 6rem;" %>
        </div>
        <div style="border-radius: 50%; padding: 15px; background-color: green;width:fit-content;">
          <%= svg_tag "pictures/categories/cat.svg", style: "color: red; font-size: 6rem;" %>
        </div>
        <div style="border-radius: 50%; padding: 15px; background-color: green;width:fit-content;">
          <%= svg_tag "pictures/categories/bag-shop.svg", style: "color: red; font-size: 6rem;" %>
        </div>
        <div style="border-radius: 50%; padding: 15px; background-color: green;width:fit-content;">
          <%= svg_tag "pictures/categories/bath-shower.svg", style: "color: red; font-size: 6rem;" %>
        </div>
      </div>
    </div>
  </section>
</main>